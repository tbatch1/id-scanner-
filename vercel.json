{
  "crons": [
    {
      "path": "/api/cron/retention",
      "schedule": "0 4 * * *"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api"
    },
    {
      "source": "/admin/(pending|scans|status|refresh)",
      "destination": "/api"
    },
    {
      "source": "/admin/(pending|scans)/(.*)",
      "destination": "/api"
    },
    {
      "source": "/payment-gateway.html",
      "destination": "/frontend/payment-gateway-auto.html"
    },
    {
      "source": "/payment-gateway-card.html",
      "destination": "/frontend/payment-gateway-card.html"
    },
    {
      "source": "/payment-gateway-card2.html",
      "destination": "/frontend/payment-gateway-card2.html"
    },
    {
      "source": "/scanner.html",
      "destination": "/frontend/scanner.html"
    },
    {
      "source": "/scanner-test.html",
      "destination": "/frontend/scanner-test.html"
    },
    {
      "source": "/admin/pending.html",
      "destination": "/frontend/admin-pending.html"
    },
    {
      "source": "/admin/scans.html",
      "destination": "/frontend/admin-scans.html"
    },
    {
      "source": "/admin/banned.html",
      "destination": "/frontend/admin-banned.html"
    },
    {
      "source": "/admin/overrides.html",
      "destination": "/frontend/admin-overrides.html"
    }
  ],
  "redirects": [
    {
      "source": "/",
      "destination": "/admin/pending.html"
    }
  ],
  "headers": [
    {
      "source": "/payment-gateway.html",
      "headers": [
        {
          "key": "Permissions-Policy",
          "value": "camera=*, microphone=*, geolocation=*"
        },
        {
          "key": "Feature-Policy",
          "value": "camera *; microphone *; geolocation *"
        }
      ]
    },
    {
      "source": "/scanner.html",
      "headers": [
        {
          "key": "Permissions-Policy",
          "value": "camera=*, microphone=*, geolocation=*"
        },
        {
          "key": "Feature-Policy",
          "value": "camera *; microphone *; geolocation *"
        }
      ]
    },
    {
      "source": "/payment-gateway-card.html",
      "headers": [
        {
          "key": "Permissions-Policy",
          "value": "camera=*, microphone=*, geolocation=*"
        },
        {
          "key": "Feature-Policy",
          "value": "camera *; microphone *; geolocation *"
        }
      ]
    }
  ]
}